---
const { title, bgTitle } = Astro.props;
---

<div class="c-title">
  <span>{bgTitle}</span>
  <h2>{title}</h2>
</div>

<style lang="scss">
  .c-title {
    position: relative;
    margin-bottom: 28rem;
    h2 {
      color: var(--color-main);
      font-size: 30rem;
      line-height: 36rem;
      font-weight: bold;
      position: absolute;
      left: 0;
      bottom: 0;
      z-index: 1;
    }

    span {
      color: var(--color-font);
      font-size: 48rem;
      line-height: 1;
      font-weight: bold;
      text-transform: uppercase;
      opacity: 0.1;
    }

    @include g.mq() {
      h2 {
        font-size: 36rem;
        line-height: 40rem;
      }

      span {
        font-size: 72rem;
      }
    }
  }
</style>
